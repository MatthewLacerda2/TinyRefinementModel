import numpy as np

def create_mock_physics_data(path="data/physics_data.npy", samples=1000):
    """
    Creates a synthetic dataset of physical trajectories.
    Format: [initial_velocity, time, gravity] -> [final_position]
    """
    # [samples, 3] input features
    inputs = np.random.rand(samples, 3).astype(np.float32)
    # [samples, 1] target outputs (simple projectile motion d = vt + 0.5at^2)
    targets = inputs[:, 0] * inputs[:, 1] + 0.5 * inputs[:, 2] * (inputs[:, 1]**2)
    
    # We save as a structured record
    data = {"x": inputs, "y": targets.reshape(-1, 1)}
    np.save(path, data)
    print(f"Physics grounding data saved to {path}")

if __name__ == "__main__":
    create_mock_physics_data()